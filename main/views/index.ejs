<%- include("partials/header.ejs") %>

<div class="login-card">
    <div class="home-title">
        <article>
            <h5>Seu espaço diário para aprender, refletir e crescer</h5>
            <h1>Ideias que inspiram<br><span style="color: #00ADB5;">palavras que conectam</span></h1>
        </article>
    </div>
  <div class="form-container">
      <form action="/submit" method="POST">
        <h1>Cadastre-se</h1>
      <input type="text" name="username" id="username" placeholder="username" />
      <div class="error">
          <h5 id="userH5">
            <%= typeof userError !== 'undefined' ? userError : '' %>
          </h5>
      </div>
      <input type="email" name="email" id="email" placeholder="email" />
      <div class="error">
          <h5 id="emailH5">
            <%= typeof emailError !== 'undefined' ? emailError : '' %>
          </h5>
      </div>
      <input
        type="password"
        name="password"
        id="password"
        placeholder="senha"
      />
      <div class="error">
          <h5 id="passH5">
            <%= typeof passError !== 'undefined' ? passError : '' %>
          </h5>
      </div>
      <input type="submit" id="inBtn" value="Cadastrar-se" />
      <a href="/login">Já tem o cadastro? Faça login</a>
    </form>
  </div>
</div>

</body>

</html>
