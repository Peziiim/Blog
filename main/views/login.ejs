<%- include("partials/header.ejs") %>

<div class="login-card">
    <div class="form-container">
        <h1>Login</h1>
        <form action="/login" method="POST">
            <input type="text" name="login" id="email" placeholder="email ou username">
            <h5 id="emailH5"><%= typeof emailError !== 'undefined' ? emailError : '' %></h5>
            <input type="password" name="password" id="password" placeholder="senha">
            <h5 id="passH5"><%= typeof passError !== 'undefined' ? passError : '' %></h5>
            <input type="submit" id="inBtn" value="Entrar">
            <a href="/">Não tem o cadastro ainda? Faça aqui</a>
        </form>
    </div>
</div>


<%- include("partials/footer.ejs") %>